<%- include('../../partials/header', { title: 'Edit Batch' }) %>

<h1 class="text-3xl font-bold mb-6">Edit Batch</h1>

<form action="/teacher/batches/<%= batch.id %>?_method=PUT" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class="mb-4">
        <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Batch Name</label>
        <input type="text" id="name" name="name" class="w-full px-3 py-2 border border-gray-300 rounded-md dark:bg-gray-700 dark:border-gray-600" value="<%= batch.name %>" required>
    </div>
    <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700">Update Batch</button>
</form>

<%- include('../../partials/footer') %>
