<%- include('../../partials/header', { title: 'Student Attendance' }) %>

<h1 class="text-3xl font-bold mb-6"><%= student.name %> - Attendance</h1>

<div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
    <table class="w-full text-left">
        <thead>
            <tr>
                <th class="py-2">Date</th>
                <th class="py-2">Status</th>
            </tr>
        </thead>
        <tbody>
            <% if (typeof attendance !== 'undefined' && attendance.length > 0) { %>
                <% attendance.forEach(record => { %>
                    <tr>
                        <td class="py-2"><%= new Date(record.date).toLocaleDateString() %></td>
                        <td class="py-2"><%= record.status %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="2" class="py-2 text-gray-500">No attendance records found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include('../../partials/footer') %>
